    //

    // add motools JS framework
	/*
    $this->headScript()->appendFile('http://www.google.com/jsapi');
    $this->headScript()->appendScript('google.load("mootools", "1.2.1");');
    */

	$this->headScript()->appendFile('/js/lib/mootools-1.2.1-core.js');
    $this->headScript()->appendFile('/js/lib/mootools-1.2-more.js');

    // add BaseZF JS framework (include in main.js)
    {
        $this->headScript()->appendFile('/js/lib/basezf/BaseZF.js');
        $this->headScript()->appendFile('/js/lib/basezf/Class/Helper.js');
        $this->headScript()->appendFile('/js/lib/basezf/Helper/AjaxLink.js');
        $this->headScript()->appendFile('/js/lib/basezf/Helper/FormFancySelect.js');
        $this->headScript()->appendFile('/js/lib/basezf/Helper/FormAjaxValidate.js');
    }

    // motools plugins files (include in lib.js and lib.css)
    {
        // auto completer
        $this->headScript()->appendFile('/js/lib/motools-plugins/Autocompleter/Autocompleter.js');
        $this->headScript()->appendFile('/js/lib/motools-plugins/Autocompleter/Autocompleter.Request.js');
        $this->headScript()->appendFile('/js/lib/motools-plugins/Autocompleter/Observer.js');
        $this->headLink()->appendStylesheet('/js/lib/motools-plugins/Autocompleter/Autocompleter.css', 'screen, projection');

        // lightbox
        $this->headScript()->appendFile('/js/lib/motools-plugins/SqueezeBox/SqueezeBox.js');
        $this->headLink()->appendStylesheet('/js/lib/motools-plugins/SqueezeBox/SqueezeBox.css', 'screen, projection');

        // Calendar
        $this->headScript()->appendFile('/js/lib/motools-plugins/Calendar/calendar.js');
        $this->headLink()->appendStylesheet('/js/lib/motools-plugins/Calendar/default/calendar.css', 'screen, projection');
        $this->headLink()->appendStylesheet('/js/lib/motools-plugins/Calendar/i-heart-ny/calendar.css', 'screen, projection');
        $this->headLink()->appendStylesheet('/js/lib/motools-plugins/Calendar/dashboard/calendar.css', 'screen, projection');
    }

    //
    // Others
    //

    // set default title if empty
    $title = $this->headTitle()->getValue();
    if (empty($title)) {
        $this->headTitle()->set(__('Examples module'));

	    // set prepend title
    	$this->headTitle()->prepend(__('BaseZF') . ' - ');
    }

    // set default meta
    $this->headMeta()->appendHttpEquiv('Content-Type', 'text/html; charset=utf-8');

    // display DocType
    echo $this->doctype() . "\n";
